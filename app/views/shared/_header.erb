
<span class="shared">
<% if current_user %>
    <%= link_to t(:profile), home_page, :class => "profile" %>&nbsp;&nbsp;
    <%= link_to t(:logout), logout_path, :class => "logout"  %>
  <% else %>
    <%= link_to t(:login), login_path , :class => "modal_signup" %>&nbsp;&nbsp;
    <%= link_to t(:register), register_path, :class => "signup" %>
  <% end %>
</span>

