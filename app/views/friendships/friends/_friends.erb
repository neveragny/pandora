
<div id="friends">
  <% @friends.each do |friend| %>
      <% friendship = @user.friendship_with(friend).first %>

      <div class="friend" id="<%= friendship.id %>" >
        <div class="user">
          <strong><%= friend.login %></strong>
        </div>

        <% if profile_owner? %>
          <div class="options">
            <%= link_to 'SEND MESSAGE' %>
            <%= link_to t(:delete_friend), friendship_path(friendship), :remote => true,
              :method => :delete, :class => :cancel, :confirm => t(:confirm_friend_delete, :name => friend.login) %>
          </div>
        <% end %>
      </div>
  <% end %>
</div>
