<div class="curveBottom" id="searchWrapperOuter">

  <div class="curveBottom" id="searchWrapper">
<%= form_tag search_renter_index_path, :class => :renter, :remote => true do |f| %>
<%= hidden_field_tag 'broker_id', '', :id => "broker_id" %>
<%= hidden_field_tag 'page', '1' %>

<div id="formContainer">
  <div class="searchBox wide">
    <label><%= t(:renter_search_borough) %></label>

    <div id="boroughDropdown" rel="#bid" class="fancyDropdown">
      <span class="selected"><%= "Все" %></span>

      <div class="clear"></div>
      <ul style="display: none;" class="fancyDropdownOptions">

        <li data-id=""><%= "Все" %></li>

        <% Dist.all.each do |dist| %>
        <li data-id="<%= dist.dist_code %>"><%= dist.dist_name %></li>
        <% end %>
      </ul>
      <input type="hidden" value="" name="dist_code" id="bid">
    </div>
  </div>



  <div class="searchBox wide">
    <label><%= t(:rooms) %></label>

    <div id="apartmentSizeDropdown" rel="#aids" class="fancyDropdownMultiple">
      <span class="selected">&nbsp;</span>

      <div class="clear"></div>
      <div style="display: none;" class="fancyDropdownMultiplePane">

        <div class="fancyDropdownOptions">
          <div class="buttons">
            <span class="closeDropdown"><a href="#"><%= t(:done_close) %></a></span>

            <div class="clear"></div>
          </div>
          <div class="clear"></div>
          <ul>
            <li><input type="checkbox" value="1"> 1</li>
            <li><input type="checkbox" value="2"> 2</li>
            <li><input type="checkbox" value="3"> 3</li>
            <li><input type="checkbox" value="4"> 4</li>
            <li><input type="checkbox" value="5"> 5</li>
            <li><input type="checkbox" value="6"> 6</li>
            <li><input type="checkbox" value="7"> 7</li>
            <li><input type="checkbox" value="8"> 8</li>
            <li><input type="checkbox" value="9"> 9</li>
          </ul>
        </div>
        <div class="clear"></div>
      </div>
      <input type="hidden" value="" name="rooms" id="aids">
    </div>
  </div>

  <div class="lastBox">
    <label><%= t(:price) %></label>
    <input type="text" size="6" name="min_rent" id="minRent" default="$" class="idleField"> до
  </div>

  <div class="searchBox wide">
    <label>&nbsp;</label>
    <input type="text" size="6" name="max_rent" id="maxRent" default="$" class="idleField">
  </div>

  <div class="searchBox wide">
    <label><%= 'Ключевое слово если есть' %></label>

    <div style="width: 125px;">
      <input type="text" size="25" name="pattern" id="keyString" default="" class="text idleField">
    </div>
  </div>

  <div id="searchBoxRenter">
    <a class="button search submitButton" href="#"><span><%= t(:search) %></span></a>
    <div class="clear"></div>
    <a class="close" href="/renter/listings/search"><%= t(:clear) %></a>
  </div>
</div>

<!-- filters -->
<div class="clear"></div>

<fieldset class="searchFilters" id="renterFilters">

  <div class="container1">
    <div class="searchBox">
      <input type="checkbox" value="1" name="photos" id="photos" class="field text">
      <%= t(:must_have_photo) %>
    </div>

    <div class="searchBox">
      <input type="checkbox" value="1" name="no_fee" id="no_fee" class="field text">
      <%= t(:no_fee_only) %>
    </div>


    <div class="searchBox">
      <input type="checkbox" value="1" name="favorites" id="favorites" class="field text">
      <%= t(:my_favorites) %>
    </div>

  </div>

  <div class="container2">
    <div class="searchBox menu">
      <label><%= t('renter.amenities') %></label>

      <div id="amenityDropdown" rel="#amids" class="fancyDropdownMultiple">
        <span class="selected">&nbsp;</span>

        <div class="clear"></div>
        <div style="display: none;" class="fancyDropdownMultiplePane">

          <div class="fancyDropdownOptions">
            <div class="buttons">
              <span class="closeDropdown"><a href="#"><%= t(:done_close) %></a></span>

              <div class="clear"></div>
            </div>
            <div class="clear"></div>

            <ul id="amenities">

              <li><input type="checkbox" value="12"> балкон</li>

              <li><input type="checkbox" value="17"> посудомойка</li>

              <li><input type="checkbox" value="1"> консьерж</li>

              <li><input type="checkbox" value="2"> лифт</li>

              <li><input type="checkbox" value="8"> парковка</li>

              <li><input type="checkbox" value="3"> прачечная</li>

              <li><input type="checkbox" value="14"> сушилка</li>

            </ul>

          </div>
          <div class="clear"></div>
        </div>
        <input type="hidden" value="0" name="amids" id="amids">
      </div>
    </div>

    <div style="margin-left: 55px;" class="searchBox menu">
      <label><%= t(:pets) %></label>

      <div id="petsDropdown" rel="#pets" class="fancyDropdownMultiple">
        <span class="selected"><%= t(:all) %></span>

        <div class="clear"></div>
        <div style="display: none;" class="fancyDropdownMultiplePane">

          <div class="fancyDropdownOptions">
            <div class="buttons">
              <span class="closeDropdown"><a href="#"><%= t(:done_close) %></a></span>

              <div class="clear"></div>
            </div>
            <div class="clear"></div>

            <ul>

              <li><input type="checkbox" value="dogs"> <%= t(:dogs) %></li>

              <li><input type="checkbox" value="cats"> <%= t(:cats) %></li>

            </ul>

          </div>
          <div class="clear"></div>
        </div>
        <input type="hidden" value="" name="pets" id="pets">
      </div>
    </div>
  </div>




</fieldset>
<div class="clear"></div>
<% end %>
</div>
</div>

