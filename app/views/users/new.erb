<h1> Прэуэт! </h1>

<h3> Please register </h3>

<%= render :partial => 'shared/errors', :locals => {:target => @user} %>

<%= form_for @user do |f| -%>
    <div class="row">
      <%= f.label :login %>: <%= f.text_field :login %>
    </div>
    <div class="row">
      <%= f.label :email %>: <%= f.text_field :email %>
    </div>
    <div class="row">
      <%= f.label :sex %>: Male<%= f.radio_button :sex, 1, :checked => true %>
                           Female<%= f.radio_button :sex, 0 %>
    </div>
    <div class="row">
      <%= f.label :password %>: <%= f.password_field :password %>
    </div>
    <div class="row">
      <%= f.label :password_confirmation %>: <%= f.password_field :password_confirmation %>
    </div>
    <%= f.submit t(:register), :disable_with => t(:please_wait) %>
<% end %>
