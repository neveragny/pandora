<html class=" gecko mac js native-css-gradients" xmlns:fb="http://www.facebook.com/2008/fbml">
<head xmlns:fb="http://www.facebook.com/2008/fbml" xmlns="http://www.w3.org/1999/xhtml">
  <meta name="MSSmartTagsPreventParsing" content="true" />
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=EmulateIE7" />
  <meta content="text/html; charset=utf-8" http-equiv="Content-Type"/>
  <title>Пандора - проект "Живая база недвижимости" Киев.</title>
  <link rel="icon" href="/images/favicon.ico" type="image/x-icon" />

  <%= stylesheet_link_tag 'reset.css' %>
  <%= javascript_include_tag 'jquery.js', 'rails.js', 'application.js', 'applesearch.js', 'jcookie.js'%>
  <%= javascript_include_tag 'form', 'jquery.remotipart' %>

  <%= yield :head %>
  <%= csrf_meta_tag %>

</head>
<body>
<body id="flow">
	<div id="slab-wrapper">
		<h1>
			<strong>Регистрация</strong>&nbsp;&mdash; это Просто.
		</h1>
		<p class="signin">
			уже с нами?
			<a id="nav_sign_in" href="/signin">войти</a>
		</p>
		<div id="slab">
          <%= render :partial => 'shared/errors', :locals => {:target => @user} %>

          <%= form_for @user do |f| -%>
              <div class="title">
                <h2>Региструруйся<span>&mdash; будет круто!</span></h2>
                <a class="modal_signup" href="#login">войти</a>
              </div>
              <div class="main">

                    <%= f.label "логин" %><%= f.text_field :login %>


                    <%= f.label "почтовый ящик" %><%= f.text_field :email %>


                    <%= f.label "пол" %>пацанчик<%= f.radio_button :sex, 1, :checked => true %>
                                         деваха<%= f.radio_button :sex, 0 %>


                    <%= f.label "пароль" %><%= f.password_field :password %>


                    <%= f.label "еще разок пароль" %><%= f.password_field :password_confirmation %>

              </div>
              <div class="submit">
                <%= f.submit t(:register), :class => "button", :disable_with => t(:please_wait) %>
                <!--<a class="button" href="#submit">Sign up</a>-->
              </div>
          <% end %>

        </div>
        <div class="clear"></div>
      </div>
    </div>
  </div>
  <div id="signup-footer"></div>

    <div class="modal_background" style="width: 100%; height: 100%;"></div>
    <div id="modal1" class="modal window" style="top: 43.125px; left: 355.5px;">
      <div id="login" class="wrapper">
        <div class="title">
            <h1>Log in</h1>
        </div>
        <%= form_for(UserSession.new) do |f| %>
          <div id="form">
            <fieldset>
              <label><%= f.label t(:user_login) %></label>
                <div><%= f.text_field :login %></div>
            </fieldset>
            <fieldset>
              <label><%= f.label t(:password) %></label>
                <div><%= f.password_field :password %></div>
            </fieldset>
            <fieldset>
                <label></label>
                <div class="forgot">
                    <a href="#">не помним пароль?</a>
                </div>
            </fieldset>
          </div>
          <div class="submit">
            <%= f.submit t(:login), :class=> :button, :disable_with => t(:please_wait) %>
            <%= link_to t(:register), register_path, :class => "signup" %>
            <a href="#cancel" class="cancel">Cancel</a>
          </div>
            <!--<fieldset>-->
                <%#= f.label t(:remember_me) %> <%#= f.check_box :remember_me %>
            <!--</fieldset>-->
        <% end %>




      </div>
    </div>


  </div>
	</div>

</body>
</html>


