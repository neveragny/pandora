<%= form_for @entry, :remote => true, :html => {:id => :parent_form, :multipart => true} do |f| %>
    <%= f.text_area :body, :cols => 50, :rows => 5 %> <br />
    <%= f.label(t :image) %> <%= f.file_field :image %>
    <strong class='cancel-upload'>X</strong> <br />
    <%= f.submit(t(:say), :disabled => true) %>
<% end %>
